.projects_search
  = search_form_for @search do |s|
    %ul.nav.navbar-nav.navbar-right
      %li
        %img{:alt => "search", :height => "15", :src => "/assets/search-icon.png", :width => "15"}/
      %li
        = s.text_field :name_cont, class: "form-style", placeholder: "Project Name"
      %li
        = s.input :last_run_cont, label: false, input_html: {id: 'datetimepicker',"data-date-format" => "YYYY/MM/DD",class: "form-style"}, placeholder: "Last Run At"
        :javascript
          $(function () {
            $('#datetimepicker').datetimepicker({
              pickTime: false
            });
          });        
      %li
        = s.submit  "Search", class: "btn-style",id: 'search_projects'

  .cnt-header-txt
    Projects
.cnt-box
  %table.table.table-striped.table-hover#projects_list
    %tr
      %th Sl No.
      %th
        = sort_link @search, :name, "Project Name"
      = content_tag :th , sort_link(@search, :last_run, "Last Ran At")
      /* = content_tag :th , sort_link(@search, :last_test_run_status, "Test Status")
      /* = content_tag :th , sort_link(@search, :last_test_run_processed, "Processed")
      %th Test Status
      %th Processed
      %th Success
      %th Failed
      /* = content_tag :th , sort_link(@search, :last_test_run_failures, "Failed")
      = content_tag :th , sort_link(@search, :next_run, "Next Run At"), class: 'active'
      %th.active
        = sort_link @search, :run_frequency, "Frequency"
      %th.active
        = sort_link @search, :active, "Project Status"
    - @i = 0
    - @projects.each do |project|
      -@i = @i+1
      = render :partial => "project", :locals => {:project => project}
.pagination{style: "margin-top: -10px;"}
  = paginate @projects


