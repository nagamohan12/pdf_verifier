= simple_form_for @project, wrapper: :horizontal_form_small do |f|
  %h5 Edit Project Information
  %input{:name => "_method", :type => "hidden", :value => "put"}
  = f.input :name
  = f.input :description, as: :text
  = f.input :input_folder
  = f.input :pdf_folder
  = f.input :active, as: :boolean
  = f.input :run_frequency, collection: ['Daily','Hourly','Weekly','Monthly'], prompt: false
  = f.input :next_run, as: :datetime_picker, input_html: {id: 'datetimepicker7'}
  :javascript
    $(function () {
        $('#datetimepicker7').datetimepicker();
    });

  = f.button :submit, "Save", class: %w(btn btn-default btn-success col-sm-offset-6)

