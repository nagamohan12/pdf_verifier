<%= f.input :role, collection: (User::ROLES.map{|r| [r.to_s.capitalize, r]}), prompt: false %>
<%= f.input :username %>
<%= f.input :email %>
<%= f.input :password  %>
<%= f.input :password_confirmation %>
<%= f.button :submit , "Save", class: %w(btn btn-sm btn-success col-sm-offset-6) %>
<% cancel_path = current_user.normal_user? ? project_path : admin_users_path %>
<%= link_to "Cancel", cancel_path , :class => "btn btn-sm btn-default"%>

