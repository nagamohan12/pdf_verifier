%h1 Listing Organizations

%table.table.table-striped
  %tr
    %th Name
    %th Description
    %th Actions

  - @organizations.each do |organization|
    %tr
      %td= organization.name
      %td= organization.description || "--"
      %td
        = link_to 'Show', admin_organization_path(organization), :class => "btn btn-primary btn-xs"
        = link_to image_tag('../assets/edit-icon.png',title: 'Edit'), edit_admin_organization_path(organization)
        = link_to image_tag('../assets/delete-user-icon.png',title: 'Delete'), admin_organization_path(organization), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Organization', new_admin_organization_path
